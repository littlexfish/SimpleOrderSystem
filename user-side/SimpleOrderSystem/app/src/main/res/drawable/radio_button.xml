<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item android:width="30dp"
                android:height="30dp"
                android:gravity="center"
                android:top="10dp"
                android:left="10dp"
                android:right="10dp"
                android:bottom="10dp">

                <shape android:shape="oval">
                    <solid android:color="#AAA" />
                    <stroke android:color="#555"
                        android:width="1dp" />
                </shape>

            </item>
            <item android:width="16dp"
            android:height="16dp"
            android:gravity="center"
            android:top="10dp"
            android:left="10dp"
            android:right="10dp"
            android:bottom="10dp">

                <shape android:shape="oval">
                    <solid android:color="#D666" />
                    <stroke android:color="#A555"
                        android:width="1dp" />
                </shape>

            </item>

        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:width="30dp"
                android:height="30dp"
                android:gravity="center"
                android:top="10dp"
                android:left="10dp"
                android:right="10dp"
                android:bottom="10dp">

                <shape android:shape="oval">
                    <solid android:color="#AAA" />
                    <stroke android:color="#555"
                        android:width="1dp" />
                </shape>

            </item>
        </layer-list>
    </item>

</selector>